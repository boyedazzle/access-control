<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="16dp"
    tools:context=".ResumeActivity">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:id="@+id/tvUserName"
        android:text="User Name"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/tvRole"
        android:text="MIK"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/tvStaffID"
        android:text="T-10000000000X"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_gravity="center"
        android:translationZ="5dp"
        android:layout_marginTop="30dp"
        android:onClick="AuthFace"
        app:cardCornerRadius="7dp"
        android:backgroundTint="@color/text_color_black"
        android:layout_height="35dp">
        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:fontFamily="@font/roboto"

                android:text="@string/auth_face"
                android:textColor="@color/text_color_white" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_gravity="center"
        android:translationZ="5dp"
        android:layout_marginTop="10dp"
        android:onClick="AuthPassword"
        app:cardCornerRadius="7dp"
        android:backgroundTint="@color/text_color_black"
        android:layout_height="35dp">
        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:fontFamily="@font/roboto"

                android:text="@string/auth_password"
                android:textColor="@color/text_color_white" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tvReturnToLogin"
        android:text="Click here to return to login page"/>


</LinearLayout>