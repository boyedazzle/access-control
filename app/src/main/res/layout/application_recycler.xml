<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"


    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:translationZ="5dp"

        android:layout_marginTop="10dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/click_layout"

            android:paddingRight="10dp"
            android:paddingLeft="10dp"


            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:weightSum="2.4"
                android:layout_marginBottom="5dp">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="start"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/roboto"
                    android:textSize="14sp"

                    android:id="@+id/status"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:textColor="@color/text_color_black"
                    android:textSize="16sp"
                    android:gravity="start"
                    android:fontFamily="@font/roboto"
                    android:layout_marginLeft="10dp"

                    android:id="@+id/app_name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:textColor="@color/text_color_black"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/roboto"
                    android:id="@+id/app_version"/>




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:background="@drawable/update_looks"
                    android:text="@string/update_available"
                    android:textColor="@color/text_color_green"
                    android:id="@+id/update"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1.0"
                    android:gravity="end">


                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/roboto"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/view_looks_button"
                        android:text="@string/download"
                        android:textSize="12dp"
                        android:layout_weight="0.5"
                        android:textColor="@color/text_color_black" />

                    <Button
                        android:id="@+id/btn"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/roboto"
                        android:textSize="12dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/black_curved_button"
                        android:text="@string/launch_app"

                        android:textColor="@color/text_color_white" />

                </LinearLayout>
            </LinearLayout>



            <TextView
                android:layout_width="600dp"
                android:layout_height="1dp"
                android:id="@+id/hidden"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>






</LinearLayout>
